<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
      <p><%= @user.errors.count %>件のエラーがあります</p>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
    <%= form_with model: @user, url: user_path(@user.id), metjod: :patch do |f| %>
      <%= f.label :name %><br>
      <%= f.text_field :name %><br>
      <%= f.label :profile_image %><br>
      <%= f.file_field :profile_image, accept: "image/*" %><br>
      <%- f.label :introduction %><br>
      <%= f.text_area :introduction %><br>
      <%= f.submit "Update User" %>
    <% end %>
    </div>
  </div>
</div>